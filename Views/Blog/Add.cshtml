@model assignment_4.Models.Post

<link rel="stylesheet" href="~/css/PostSite.css" />
@{
    ViewData["Title"] = "Add";
}


<h3> Write a new post:</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
               
                <label asp-for="Title" class="control-label"> <h3>Title</h3></label>
                <input asp-for="Title" class="form-control" id="Title"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="Summary" class="control-label"> <h3> Summary</h3></label>
            
                <textarea asp-for="Summary" class="form-control" id="Summary" style=" height: 300px; width: 500px"></textarea>
              
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"><h3> Content</h3></label>
                <input asp-for="Content" class="form-control" id="Content" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
    
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary "id="Submit"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

